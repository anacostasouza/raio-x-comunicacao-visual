rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /etapas/{document} {
      // Qualquer um pode ler as perguntas (para responder o quiz)
      allow read: if true;

      // Somente o admin pode criar, editar ou deletar
      allow write: if request.auth != null && request.auth.token.email == "ti.desenhar@gmail.com";
    }
  }
}
